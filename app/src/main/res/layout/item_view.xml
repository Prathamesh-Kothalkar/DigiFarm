<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DDDFDF"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/fimageView"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_name"
        android:textColor="@color/bg"
        android:textStyle="bold"
        tools:text="Shop Name"
        android:textSize="20dp"
        android:layout_toEndOf="@id/fimageView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_owner"

        android:textStyle="bold"
        tools:text="Shop Owner"
        android:textSize="15dp"
        android:layout_below="@id/shop_name"
        android:layout_toEndOf="@id/fimageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_no"
        android:textColor="@color/black"
        android:text="+919021023183"
        android:autoLink="phone"
        android:clickable="true"
        android:layout_toEndOf="@id/fimageView"
        android:layout_below="@id/shop_owner" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/fimageView"
        android:layout_marginTop="20dp"
        android:background="#DAD8D8"/>

</RelativeLayout>
</LinearLayout>