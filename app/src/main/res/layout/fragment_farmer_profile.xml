<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmerProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Photo and Username Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <!-- Profile Photo -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/greet"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"/>

                <!-- Username Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Username -->
                    <TextView
                        android:id="@+id/usernameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prathamesh Kothalkar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"/>

                    <!-- Edit Profile Button -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Section with My Order, My Contact, Support, T&C, and Logout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="45dp">

                <!-- My Order -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myOrderButton"
                    android:text="My Order"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/black"
                    android:gravity="start|center_vertical"
                    android:drawableStart="@drawable/greet"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"/>

                <!-- My Contact -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/myContactButton"
                    android:text="My Contact"
                    android:textColor="@color/black"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:gravity="start|center_vertical"
                    android:drawableStart="@drawable/greet"
                    android:drawablePadding="8dp"/>

                <!-- Support -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableStart="@drawable/baseline_contact_phone_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/supportButton"
                    android:textSize="18sp"
                    android:text="Support" />

                <!-- T&C -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms and Condtions"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="8dp"
                    android:id="@+id/tcButton"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/black"
                    android:gravity="start|center_vertical"
                    android:drawableStart="@drawable/greet"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"/>

                <!-- Logout -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:id="@+id/FarmerlogoutButton"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="start|center_vertical"
                    android:textColor="#FF1100"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/greet"
                    android:drawablePadding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>