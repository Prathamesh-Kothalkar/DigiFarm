<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MY CART"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- List of items in the cart -->
    <!-- You can replace this with your actual list view or recycler view -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_rec"
        tools:listitem="@layout/my_cart_item"
        />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sample CardView representing an item in the cart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/bg"
                android:padding="5dp"
                app:cardCornerRadius="15dp">

                <!-- Add your item details here -->
                <!-- For example: item name, quantity, price, etc. -->

            </androidx.cardview.widget.CardView>

            <!-- You can dynamically add more CardViews for each item in the cart -->

        </LinearLayout>
    </ScrollView>

    <!-- Total Price Section -->
    <TextView
        android:id="@+id/text_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: 0.00"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="10dp"/>

    <!-- Button to Place Order -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>

</LinearLayout>
